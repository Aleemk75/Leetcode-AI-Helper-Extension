{
  "manifest_version": 3,
  "name": "LeetCode Helper",
  "version": "1.0",
  "description": "Get instant explanations for LeetCode problems",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LeetCode Helper"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"]
    }
  ]
}
